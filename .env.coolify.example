# ============================================
# REQUIRED: Copy these to Coolify Environment Variables
# ============================================

# Database Password (Generate: openssl rand -hex 32)
POSTGRES_PASSWORD=REPLACE_WITH_64_CHAR_PASSWORD

# Security Secrets (Generate: openssl rand -hex 32)
JWT_SECRET=REPLACE_WITH_64_CHAR_SECRET
COOKIE_SECRET=REPLACE_WITH_64_CHAR_SECRET

# Admin Credentials
ADMIN_EMAIL=admin@shennastudio.com
ADMIN_PASSWORD=REPLACE_WITH_STRONG_PASSWORD

# Stripe Payment Keys
STRIPE_SECRET_KEY=sk_live_xxxx_OR_sk_test_xxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxx_OR_pk_test_xxxx

# Medusa Publishable Key (Get from admin panel AFTER first deployment)
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_01_xxxx

