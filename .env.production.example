# ðŸŒŠ Shenna Studio Production Environment Configuration
# Copy this file to .env and fill in your production values

# ===========================================
# DATABASE CONFIGURATION (Coolify Managed)
# ===========================================
# PostgreSQL Connection String (provided by Coolify)
DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false

# Redis Connection String (provided by Coolify)
REDIS_URL=redis://username:password@host:port

# ===========================================
# SECURITY SECRETS (CHANGE THESE!)
# ===========================================
# Generate strong 32+ character secrets
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-change-in-production-xyz123
COOKIE_SECRET=your-super-secure-cookie-secret-minimum-32-characters-change-in-production-abc456

# ===========================================
# ADMIN USER CONFIGURATION
# ===========================================
ADMIN_EMAIL=admin@shennastudio.com
ADMIN_PASSWORD=YourStrongAdminPassword123!ChangeMeImmediately

# ===========================================
# STRIPE PAYMENT PROCESSING
# ===========================================
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_publishable_key_here

# ===========================================
# ALGOLIA SEARCH (OPTIONAL)
# ===========================================
ALGOLIA_APPLICATION_ID=your_algolia_app_id
ALGOLIA_SEARCH_API_KEY=your_algolia_search_only_key

# ===========================================
# CLOUDINARY IMAGE OPTIMIZATION (OPTIONAL)
# ===========================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# DOMAIN CONFIGURATION
# ===========================================
# Frontend Backend API URL
NEXT_PUBLIC_MEDUSA_BACKEND_URL=https://api.shennastudio.com

# CORS Configuration for Production
STORE_CORS=https://shennastudio.com,https://www.shennastudio.com
ADMIN_CORS=https://admin.shennastudio.com,https://shennastudio.com,https://www.shennastudio.com
AUTH_CORS=https://shennastudio.com,https://www.shennastudio.com

# Auto-initialization Settings
AUTO_MIGRATE=true
AUTO_SEED=false
AUTO_CREATE_ADMIN=true

# Medusa Configuration
MEDUSA_ADMIN_ONBOARDING_TYPE=default
MEDUSA_ADMIN_ONBOARDING_NEXTJS=true

# Application Settings
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
PORT=3000
HOSTNAME=0.0.0.0

# ===========================================
# DEPLOYMENT NOTES
# ===========================================
# 1. Generate strong JWT_SECRET and COOKIE_SECRET (32+ characters each)
# 2. Use production Stripe keys (start with sk_live_ and pk_live_)
# 3. Change ADMIN_PASSWORD immediately after first login
# 4. Set up SSL certificates for your domain
# 5. Configure DNS to point to your Coolify VPS
# 6. Test all integrations before going live