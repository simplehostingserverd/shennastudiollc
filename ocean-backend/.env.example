# Ocean Backend Environment Configuration
# Copy this file to .env and fill in your actual values
# SECURITY WARNING: Never commit actual secrets to version control

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://username:password@host:port/database"
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# SECURITY SECRETS
# ===========================================
# These will be auto-generated by Coolify VPS deployment
# For local development, generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
COOKIE_SECRET=your_cookie_secret_minimum_32_characters_long

# ===========================================
# CORS CONFIGURATION
# ===========================================
STORE_CORS=http://localhost:3000,https://yourdomain.com,https://www.yourdomain.com
ADMIN_CORS=http://localhost:7001,https://admin.yourdomain.com
AUTH_CORS=http://localhost:3000,https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# ADMIN USER SETUP (Change these for production)
# ===========================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=ChangeThisPassword123!

# ===========================================
# MEDUSA CONFIGURATION
# ===========================================
MEDUSA_BACKEND_URL=http://localhost:9000

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
NODE_ENV=development
DEBUG=medusa:*